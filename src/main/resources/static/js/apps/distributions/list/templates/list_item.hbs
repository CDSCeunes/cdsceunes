<div class="small-3 medium-3 columns"><span class="js-edit-name">{{ name }}</span></div>
<div class="small-3 medium-3 columns"><span>{{ semester }}</span></div>
<div class="small-3 medium-3 columns"><span>{{ teacher }}</span></div>
<div class="small-3 medium-3 columns"><span>{{ discipline }}</span></div>
<div class="medium-1 columns">
  <a href="#distributions/{{ id }}" class="tiny hollow button js-show-distribution">
    <i class="fa fa-eye"></i>
    Exibir
  </a>
</div>
<div class="medium-1 columns">
  <a href="#distributions/{{ id }}/edit" class="tiny hollow button js-edit-distribution">
    <i class="fa fa-pencil"></i>
    Editar
  </a>
</div>
<div class="medium-1 columns">
  <button class="tiny hollow button radius js-delete-distribution">
    <i class="fa fa-remove"></i>
    Apagar
  </button>
</div>
